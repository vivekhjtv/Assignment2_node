b<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
</head>
<body>
    <h1>{{ title }}</h1>
    {{#if book}}
    <form action="/updateBook/{{ book._id }}" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{ book.title }}" required><br>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="{{ book.author }}" required><br>

        <label for="price">Price:</label>
        <input type="text" id="price" name="price" value="{{ book.price }}" required><br>

        <label for="pages">Pages:</label>
        <input type="text" id="pages" name="pages" value="{{ book.pages }}"><br>

        <label for="avg_reviews">Average Reviews:</label>
        <input type="text" id="avg_reviews" name="avg_reviews" value="{{ book.avg_reviews }}"><br>

        <label for="n_reviews">Number of Reviews:</label>
        <input type="text" id="n_reviews" name="n_reviews" value="{{ book.n_reviews }}"><br>

        <label for="star">Star Rating:</label>
        <input type="text" id="star" name="star" value="{{ book.star }}"><br>

        <label for="dimensions">Dimensions:</label>
        <input type="text" id="dimensions" name="dimensions" value="{{ book.dimensions }}"><br>

        <label for="weight">Weight:</label>
        <input type="text" id="weight" name="weight" value="{{ book.weight }}"><br>

        <label for="language">Language:</label>
        <input type="text" id="language" name="language" value="{{ book.language }}"><br>

        <label for="publisher">Publisher:</label>
        <input type="text" id="publisher" name="publisher" value="{{ book.publisher }}"><br>

        <label for="ISBN">ISBN:</label>
        <input type="text" id="ISBN" name="ISBN" value="{{ book.ISBN }}"><br>

        <label for="complete_link">Complete Link:</label>
        <input type="text" id="complete_link" name="complete_link" value="{{ book.complete_link }}"><br>

        <button type="submit">Update Book</button>
    </form>
    {{else}}
    <p>Book not found.</p>
    {{/if}}
</body>
</html>
